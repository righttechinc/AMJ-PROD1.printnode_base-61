<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_label_layout_form" model="ir.ui.view">
        <field name="name">product.label.layout.form</field>
        <field name="model">product.label.layout</field>
        <field name="inherit_id" ref="product.product_label_layout_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='custom_quantity']" position="before">
                <field name="move_quantity"/>
            </xpath>
            <xpath expr="/form/group" position="after">
                <group>
                    <group>
                        <field name="active_model" invisible="1"/> <!-- Required because it is used in the invisible condition above -->
                        <field name="is_dpc_enabled" invisible="1" /> <!-- Required because it is used in the invisible condition above -->
                        <field name="printer_id" widget="printnode_product_label_layout_printer_many2one" invisible="is_dpc_enabled == False"/>
                        <field name="printer_bin" invisible="is_dpc_enabled == False"/>
                    </group>
                </group>
                <field name="product_line_ids"
                       invisible="move_quantity != 'custom_per_product' or active_model == 'product.template'">
                    <list editable="top">
                        <field name="product_id" required="True"/>
                        <field name="quantity"/>
                    </list>
                </field>
                <field name="product_tmpl_line_ids"
                       invisible="move_quantity != 'custom_per_product' or active_model == 'product.product'">
                    <list editable="top">
                        <field name="product_tmpl_id" required="True"/>
                        <field name="quantity"/>
                    </list>
                </field>
            </xpath>
            <xpath expr='//field[@name="custom_quantity"]' position="attributes">
                <attribute name="invisible">
                    move_quantity != 'custom'
                </attribute>
            </xpath>
        </field>
    </record>

    <record id="product_label_layout_form_picking" model="ir.ui.view">
        <field name="name">product.label.layout.form</field>
        <field name="model">product.label.layout</field>
        <field name="inherit_id" ref="stock.product_label_layout_form_picking"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_quantity']" position="replace"/>
            <xpath expr='//field[@name="custom_quantity"]' position="attributes">
                <attribute name="invisible">
                    move_quantity != 'custom'
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>
